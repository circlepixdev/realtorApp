    </style>
    <style name="GlobalPresentationSettingsLogoutButton">
        <item name="android:background">#C0C0C0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:text">@string/settings_logout_button_text</item>
    </style>

    <style name="GlobalPresentationNextButton">
        <item name="android:background">#ffffff</item>
        <item name="android:src">@drawable/ic_forward_holo_light</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="GlobalPresentationSettingsHeaderText">
        <item name="android:text">@string/settings_global_desc_text</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="GlobalPresentationSettingsAgentNameHeaderText">
        <item name="android:text">@string/settings_global_agentname_desc_text</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="GlobalPresentationAgentNameEditText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GlobalPresentationAgentNameCoListing">
        <item name="android:text">@string/settings_global_agentname_colisting_desc_text</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="GlobalPresentationSettingsBackgroundMusicHeaderText">
        <item name="android:text">@string/settings_global_backgroundmusic_desc_text</item>
