<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppActionBarTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/circlepix_ltltgrey</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/circlepix_ltltgrey</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/circlepix_ltltgrey</item>
    </style>

    <style name="PresActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorAccent</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="EditText" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>



    <style name="ActionBarBase">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ActionbarSave" parent="ActionBarBase">
        <item name="android:text">@string/actionbar_save_text</item>
    </style>

    <style name="ActionbarLogout" parent="ActionBarBase">
        <item name="android:text">@string/actionbar_logout_text</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PromptTitle">
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/font_size_prompt_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PromptText">
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/font_size_prompt_text</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">10</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- SwipeListView -->
    <style name="ListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/height_list</item>
        <item name="android:background">@color/background_list_front</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="ListFrontContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/height_list</item>
        <!--<item name="android:background">@color/background_list_front</item>-->
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="ListImage">
        <item name="android:layout_width">@dimen/list_image_width</item>
        <item name="android:layout_height">@dimen/list_image_height</item>
        <item name="android:scaleGravity">fill</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
    </style>

    <style name="ListTitle">
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:textColor">@color/text_title</item>

        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <!-- <item name="android:maxLines">2</item> -->
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListDescription">
        <item name="android:textColor">@color/text_description</item>

        <item name="android:singleLine">true</item>
    </style>

    <style name="ListButtonAction">
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:background">@color/background_list_btn</item>
    </style>

    <style name="ListSendButtonAction">
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/background_list_send_btn</item>
    </style>

    <style name="ListEditButtonAction">
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/background_list_edit_btn</item>
    </style>

    <style name="ListDeleteButtonAction">
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/background_list_delete_btn</item>
    </style>

    <!-- Alert Dialog -->
    <style name="CustomDialog" parent="@android:style/Theme.Translucent.NoTitleBar">
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:padding">10dp</item>
    <item name="android:background">@drawable/dialog_round_rect_shape</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Added by: Relly From this point -->
