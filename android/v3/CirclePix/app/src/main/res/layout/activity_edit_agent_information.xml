<android.support.design.widget.AppBarLayout  xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:id="@+id/toolbar_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="right"
            android:paddingRight="16dp"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="40dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Agent Information:"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/edit_agent_info"
                            android:textColor="@color/colorPrimaryDark"
                            android:id="@+id/textView5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Agent ID Number:"
                                android:textColor="@color/colorPrimary"/>

                            <TextView
                                android:id="@+id/text_agent_id_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="123456"
                                android:textColor="@color/colorPrimary"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="First Name:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_first_name"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last Name:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_last_name"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Agency:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_agency"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone Number:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_phone_number"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:inputType="numberDecimal"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cell Number:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_cell_number"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:inputType="numberDecimal"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <com.circlepix.android.helpers.MaterialSpinner
                            android:id="@+id/spinner_cell_provider"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/white"
                            app:ms_multiline="false"
                            app:ms_enableFloatingLabel="true"
                            app:ms_enableErrorLabel="false"
                            app:ms_floatingLabelText="Cell Provider"
                            app:ms_floatingLabelColor="@color/colorPrimary"
                            app:ms_baseColor="@color/colorAccent"
                            app:ms_hintColor="@color/colorAccent"
                            app:ms_arrowColor="@color/colorAccent"
                            app:ms_arrowSize="16dp"
                            app:ms_alignLabels="false"/>

                        <com.circlepix.android.helpers.MaterialSpinner
                            android:id="@+id/spinner_text_notifications"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/white"
                            app:ms_multiline="false"
                            app:ms_enableFloatingLabel="true"
                            app:ms_enableErrorLabel="false"
                            app:ms_floatingLabelText="Text Notifications"
                            app:ms_floatingLabelColor="@color/colorPrimary"
                            app:ms_baseColor="@color/colorAccent"
                            app:ms_hintColor="@color/colorAccent"
                            app:ms_arrowColor="@color/colorAccent"
                            app:ms_arrowSize="16dp"
                            app:ms_alignLabels="false"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fax Number:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_fax_number"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:inputType="numberDecimal"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email Address:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_email_address"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Website:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_website"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Street Address:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_street_address"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="City:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_city"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="State:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_state"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zip Code:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_zip_code"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:inputType="numberDecimal"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LeadBee Pin:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_leadbee_pin"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:inputType="numberDecimal"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Product Number:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_product_number"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:inputType="numberDecimal"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <com.circlepix.android.helpers.MaterialSpinner
                            android:id="@+id/spinner_billing_type"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/white"
                            app:ms_multiline="false"
                            app:ms_enableFloatingLabel="true"
                            app:ms_enableErrorLabel="false"
                            app:ms_floatingLabelText="Billing Type"
                            app:ms_floatingLabelColor="@color/colorPrimary"
                            app:ms_baseColor="@color/colorAccent"
                            app:ms_hintColor="@color/colorAccent"
                            app:ms_arrowColor="@color/colorAccent"
                            app:ms_arrowSize="16dp"
                            app:ms_alignLabels="false"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="State License Number:"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:id="@+id/editText_state_license_number"
                                android:layout_width="fill_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="32dp"
                                android:inputType="numberDecimal"
                                android:theme="@style/EditText"
                                android:textColor="@color/colorPrimaryDark"
                                android:background="@drawable/edittext_style"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="@string/recreate_listing_videos_desc"
                            android:textColor="@color/colorPrimary"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recreate Listing Videos:"
                                android:textColor="@color/colorPrimary"/>

                            <CheckBox
                                android:id="@+id/checkbox_recreate_listing_videos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</android.support.design.widget.AppBarLayout>
