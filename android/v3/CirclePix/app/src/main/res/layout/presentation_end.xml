<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/subRootViewRed"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="#ffe91d24"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#ff218dcd"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#ffffffff">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:id="@+id/realtorImageRed"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Amy Agent"
                        android:id="@+id/realtorNameRed"
                        android:layout_below="@+id/realtorImageRed"
                        android:layout_alignLeft="@+id/realtorImageRed"
                        android:layout_alignStart="@+id/realtorImageRed"
                        style="@style/PresentationPage1AgentName" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="888.888.8888"
                        android:id="@+id/realtorPhoneNumRed"
                        android:layout_below="@+id/realtorNameRed"
                        android:layout_alignRight="@+id/realtorImageRed"
                        android:layout_alignEnd="@+id/realtorImageRed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="amy32@red.net"
                        android:id="@+id/realtorEmailRed"
                        android:layout_below="@+id/realtorPhoneNumRed"
                        android:layout_alignLeft="@+id/realtorPhoneNumRed"
                        android:layout_alignStart="@+id/realtorPhoneNumRed" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="40dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgThankRed"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/realtorImageRed"
                        android:layout_toEndOf="@+id/realtorImageRed"
                        android:src="@drawable/presentation_thank_blue_logo" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="#ff218dcd"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#ffe91d24"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/subRootViewBlue">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:layout_weight=".5"
            android:id="@+id/leftFrame">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/leftTopFrame"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgRealtor"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:scaleType="centerInside"
                    android:paddingTop="30dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/leftBottomFrame"
                android:layout_weight="1"
                android:paddingTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/agentInfoFrame"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/PresentationPage1AgentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Amy Agent"
                        android:id="@+id/realtorName"
                        android:layout_below="@+id/realtorImageRed"
                        android:layout_alignLeft="@+id/realtorImageRed"
                        android:layout_alignStart="@+id/realtorImageRed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="amy32@red.net"
                        android:id="@+id/realtorEmail"
                        android:layout_below="@+id/realtorPhoneNumRed"
                        android:layout_alignLeft="@+id/realtorPhoneNumRed"
                        android:layout_alignStart="@+id/realtorPhoneNumRed"
                        style="@style/PresentationPage1AgentInfo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="888.888.8888"
                        android:id="@+id/realtorPhone"
                        android:layout_below="@+id/realtorNameRed"
                        android:layout_alignRight="@+id/realtorImageRed"
                        android:layout_alignEnd="@+id/realtorImageRed"
                        style="@style/PresentationPage1AgentInfo" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/companyNameFrame"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company Name"
                        android:id="@+id/companyName"
                        style="@style/PresentationPage1CompanyName" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_weight=".015"
            android:id="@+id/middleFrame"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="40dp"
            android:layout_weight="1"
            android:id="@+id/rightFrame"
            android:gravity="center"
            android:background="#ffffffff">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgThank"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/presentation_thankyou_black"
                android:background="#ffffff"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
